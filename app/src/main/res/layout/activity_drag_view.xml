<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_transparent">

    <TextView
        android:id="@+id/tv_top_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="@drawable/drag_view_title_bg"
        android:gravity="center"
        android:padding="15dp"
        android:text="按住提示框拖动到任意位置\n点击返回键立即生效"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <include layout="@layout/toast_layout"/>

    <TextView
        android:id="@+id/tv_bottom_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:background="@drawable/drag_view_title_bg"
        android:gravity="center"
        android:padding="15dp"
        android:text="按住提示框拖动到任意位置\n点击返回键立即生效"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:visibility="invisible" />


</RelativeLayout>