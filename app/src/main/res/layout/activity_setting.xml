<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />

    <cn.foxconn.matthew.myapp.mobilesafe.widget.SettingItemCheckView
        android:id="@+id/item_update"
        style="@style/setting_item_style"
        app:des_off="已关闭"
        app:des_on="已开启"
        app:title="自动更新设置" />

    <cn.foxconn.matthew.myapp.mobilesafe.widget.SettingItemCheckView
        android:id="@+id/item_device_admin"
        style="@style/setting_item_style"
        app:des_off="已关闭"
        app:des_on="已开启"
        app:title="设备管理器" />

    <cn.foxconn.matthew.myapp.mobilesafe.widget.SettingItemCheckView
        android:id="@+id/item_address"
        style="@style/setting_item_style"
        app:des_off="已关闭"
        app:des_on="已开启"
        app:title="电话归属地显示设置" />

    <cn.foxconn.matthew.myapp.mobilesafe.widget.SettingItemClickView
        android:id="@+id/item_address_shown_theme"
        style="@style/setting_item_style" />

    <cn.foxconn.matthew.myapp.mobilesafe.widget.SettingItemClickView
        android:id="@+id/item_address_shown_location"
        style="@style/setting_item_style" />

    <cn.foxconn.matthew.myapp.mobilesafe.widget.SettingItemCheckView
        android:id="@+id/item_accelerate_rocket"
        style="@style/setting_item_style"
        app:des_off="已关闭"
        app:des_on="已开启"
        app:title="加速小火箭"
        android:visibility="gone"/>
    <cn.foxconn.matthew.myapp.mobilesafe.widget.SettingItemCheckView
        android:id="@+id/item_black_list_block"
        style="@style/setting_item_style"
        app:des_off="已关闭"
        app:des_on="已开启"
        app:title="黑名单拦截" />
</LinearLayout>
